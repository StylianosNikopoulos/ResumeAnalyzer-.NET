@model List<ApplyService.Models.UserInfo>

@{
    ViewData["Title"] = "HR Dashboard";
}

<h2>Analyze And Download Resumes</h2>
<form method="post" action="@Url.Action("FilterResumes", "Resumes")" onsubmit="return prepareKeywords();">
    <input type="text" id="keywordInput" placeholder="Enter skills, e.g., .NET, SQL, Java" required />
    <div id="keywordsContainer"></div>
    <button type="submit">Analyze Resumes</button>
</form>

<h3>@(Model != null && Model.Any() ? "All Resumes" : "No Resumes Found")</h3>

@if (Model != null && Model.Any())
{
    <div class="resume-table-container">
        <table>
            <thead>
                <tr>
                    <th>Resume ID</th>
                    <th>Candidate Name</th>
                    <th>Email</th>
                    <th>Resume Uploaded</th>
                    <th>Download</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var resume in Model)
                {
                    <tr>
                        <td>@resume.Id</td>
                        <td>@resume.Name</td>
                        <td>@resume.Email</td>
                        <td>@resume.CreatedAt?.ToString("MM/dd/yyyy")</td>
                        <td>
                            <a href="@Url.Action("DownloadResume", "Resumes", new { id = resume.Id })">Download</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p>No resumes found.</p>
}

<script>function prepareKeywords() {
        const input = document.getElementById("keywordInput").value;
        const keywords = input.split(',').map(keyword => keyword.trim()).filter(k => k);
        const container = document.getElementById("keywordsContainer");
        container.innerHTML = ''; 

        keywords.forEach(keyword => {
            const input = document.createElement("input");
            input.type = "hidden";
            input.name = "keywords";
            input.value = keyword;
            container.appendChild(input);
        });

        return true;
}
</script>


<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #F3F4F6;
        margin: 0;
        padding: 0;
        color: #1E293B;
    }

    form {
        max-width: 500px;
        margin: 2rem auto;
        display: flex;
        gap: 0.5rem;
        justify-content: center;
    }

        form input {
            flex: 1;
            padding: 0.75rem;
            border: 1px solid #DDD;
            border-radius: 8px;
            font-size: 1rem;
            background-color: #FFFFFF;
            transition: border 0.3s ease;
        }

            form input:focus {
                border-color: #4F46E5;
                outline: none;
                box-shadow: 0 0 10px rgba(79, 70, 229, 0.1);
            }

        form button {
            padding: 0.75rem 1rem;
            background-color: #4F46E5;
            color: #FFFFFF;
            border: none;
            border-radius: 8px;
            font-weight: bold;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            form button:hover {
                background-color: #4338CA;
            }

    .resume-table-container {
        max-width: 800px;
        margin: 2rem auto;
        background: #FFFFFF;
        padding: 1rem;
        border-radius: 12px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.05);
        overflow: hidden;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        background-color: #FFFFFF;
    }

        table thead {
            background-color: #4F46E5;
            color: #FFFFFF;
            text-align: left;
        }

        table th,
        table td {
            padding: 0.75rem 1rem;
            border-bottom: 1px solid #E5E7EB;
            font-size: 0.95rem;
        }

        table tbody tr:hover {
            background-color: #F3F4F6;
        }

        table td a {
            color: #4F46E5;
            text-decoration: none;
            font-weight: 600;
            transition: color 0.3s;
        }

            table td a:hover {
                color: #4338CA;
            }
</style>