@model List<ApplyService.Models.UserInfo>

@{
    ViewData["Title"] = "HR Dashboard";
}
<h2>Analyze And Download Resumes</h2>
<form method="post" action="@Url.Action("FilterResumes", "Resumes")">
    <input type="text" name="keywords" placeholder="Enter skills, e.g., .NET, SQL" required />
    <button type="submit">Analyze Resumes</button>
</form>

@if (Model != null && Model.Any())
{
    <h3>Top 10 Resumes</h3>
    <table>
        <thead>
            <tr>
                <th>Resume ID</th>
                <th>Candidate Name</th>
                <th>Email</th>
                <th>Download</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var resume in Model)
            {
                <tr>
                    <td>@resume.Id</td>
                    <td>@resume.Name</td>
                    <td>@resume.Email</td>
                    <td>
                        <a href="@Url.Action("DownloadResume", "Resumes", new { id = resume.Id })">Download</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No resumes found for the given keywords.</p>
}

<style>
    /* General Styles */
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #F3F4F6;
        margin: 0;
        padding: 0;
        color: #1E293B;
    }

    /* Dashboard Container */
    form {
        max-width: 600px;
        margin: 2rem auto;
        display: flex;
        gap: 0.5rem;
        justify-content: center;
    }

        form input {
            flex: 1;
            padding: 0.75rem;
            border: 1px solid #DDD;
            border-radius: 8px;
            font-size: 1rem;
            background-color: #FFFFFF;
            transition: border 0.3s ease;
        }

            form input:focus {
                border-color: #4F46E5;
                outline: none;
                box-shadow: 0 0 10px rgba(79, 70, 229, 0.1);
            }

        form button {
            padding: 0.75rem 1rem;
            background-color: #4F46E5;
            color: #FFFFFF;
            border: none;
            border-radius: 8px;
            font-weight: bold;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            form button:hover {
                background-color: #4338CA;
            }

    /* Heading Style */
    h3 {
        text-align: center;
        font-size: 1.8rem;
        margin-top: 1.5rem;
        color: #4F46E5;
    }

    /* Table Styles */
    table {
        width: 80%;
        margin: 2rem auto;
        border-collapse: collapse;
        background-color: #FFFFFF;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.05);
        border-radius: 12px;
        overflow: hidden;
    }

        table thead {
            background-color: #4F46E5;
            color: #FFFFFF;
            text-align: left;
        }

        table th, table td {
            padding: 0.75rem 1rem;
            border-bottom: 1px solid #E5E7EB;
            font-size: 0.95rem;
        }

        table tbody tr:hover {
            background-color: #F3F4F6;
        }

        table td a {
            color: #4F46E5;
            text-decoration: none;
            font-weight: 600;
            transition: color 0.3s;
        }

            table td a:hover {
                color: #4338CA;
            }

    /* No Resumes Found Message */
    p {
        text-align: center;
        font-size: 1rem;
        color: #6B7280;
        margin-top: 2rem;
    }

</style>