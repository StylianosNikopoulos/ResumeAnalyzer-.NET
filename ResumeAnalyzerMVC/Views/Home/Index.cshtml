@{
    ViewData["Title"] = "Home Page";
}
<section id="home" class="hero">
    <h1>Your Future, Powered by Technology</h1>
    <p>We provide innovative software solutions tailored to your business needs.</p>
</section>

<!-- First Section -->
<section id="services" class="services">
    <h2>Our Services</h2>
    <div class="service-cards">
        <div class="service-card">
            <h3>Custom Software Development</h3>
            <p>Build tailored software solutions that meet your specific business goals.</p>
        </div>
        <div class="service-card">
            <h3>Cloud Solutions</h3>
            <p>Leverage the power of the cloud for seamless and scalable operations.</p>
        </div>
        <div class="service-card">
            <h3>Mobile App Development</h3>
            <p>Deliver engaging mobile experiences for your users on iOS and Android.</p>
        </div>
    </div>
</section>

<!-- About Section -->
<section id="about" class="about">
    <h2>About Us</h2>
    <p>We are a leading software development company providing top-notch services to clients across various industries. Our team of experts is dedicated to delivering innovative and effective solutions to enhance your business.</p>
</section>

<!-- Second Section -->
<section id="testimonials" class="testimonials">
    <h2>What Our Clients Say</h2>
    <div class="testimonial-cards">
        <div class="testimonial-card">
            <p>"TechX Solutions transformed our operations with their custom software. Our productivity has increased by over 40%!"</p>
            <p>- John Doe, CEO of ABC Corp</p>
        </div>
        <div class="testimonial-card">
            <p>"We are extremely happy with the mobile app TechX developed for us. It has brought in a significant number of new users."</p>
            <p>- Jane Smith, Product Manager at XYZ Ltd.</p>
        </div>
    </div>
</section>


<style>
    .hero {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        height: 90vh;
        background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
        color: white;
        padding: 2rem;
        border-radius: 12px;
        box-shadow: var(--shadow);
    }

        .hero h1 {
            font-size: 4rem;
            font-weight: 800;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        .hero p {
            font-size: 1.5rem;
            max-width: 600px;
            margin-top: 1rem;
            opacity: 0.9;
        }

    /* First Section */
    .services {
        padding: 4rem 2rem;
        text-align: center;
        background-color: var(--background-color);
    }

        .services h2 {
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--text-color);
            margin-bottom: 2rem;
        }

    .service-cards {
        display: flex;
        justify-content: center;
        gap: 2rem;
    }

    .service-card {
        background: var(--card-bg);
        padding: 2rem;
        width: 300px;
        border-radius: 8px;
        box-shadow: var(--shadow);
    }

        .service-card h3 {
            font-size: 1.8rem;
            font-weight: 600;
            color: var(--primary-color);
            margin-bottom: 1rem;
        }

        .service-card p {
            color: #6B7280;
        }

    /* Second Section */
    .testimonials {
        padding: 4rem 2rem;
        background: #F3F4F6;
        text-align: center;
    }

        .testimonials h2 {
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--text-color);
            margin-bottom: 2rem;
        }

    .testimonial-cards {
        display: flex;
        justify-content: center;
        gap: 2rem;
    }

    .testimonial-card {
        background: var(--card-bg);
        padding: 2rem;
        width: 300px;
        border-radius: 8px;
        box-shadow: var(--shadow);
    }

        .testimonial-card p {
            font-style: italic;
            color: #6B7280;
            margin-bottom: 1rem;
        }
</style>