@{
    ViewData["Title"] = "Apply";
}
<script src="~/js/apply.js"></script>
<link rel="stylesheet" href="~/css/apply.css">

<h2>Upload Your Resume</h2>

<section id="apply" class="apply">
    <form method="post" asp-action="UploadResume" asp-controller="Apply" enctype="multipart/form-data" class="apply-form">
        <div class="form-group">
            <label for="name">Full Name</label>
            <input type="text" name="name" id="name" placeholder="Your Name" required>

            <label for="email">Email</label>
            <input type="email" name="email" id="email" placeholder="Your Email" required>

            <label for="file">Resume (PDF, DOCX)</label>
            <div class="file-input">
                <label for="file" id="fileLabel">ðŸ“„ Click to Upload Your Resume</label>
                <input type="file" name="file" id="file" required onchange="hideFileName()">
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Upload Resume</button>
    </form>
</section>